<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('./partials/head') %>
   <link rel="stylesheet" href="/css/styles-order.css">
</head>

<body>

   <header class="main-header">
      <%- include('./partials/header') %>
   </header>

   <main class="mt-5 pt-4">
      <div>
         <h2 class="main-title">Pedido NÃºmero <%=order.id%>
         </h2>
         <table class="styled-table">
            <thead>
               <tr>
                  <th>#</th>
                  <th class="chartValue">Producto</th>
                  <th>Precio</th>
                  <th>Cantidad</th>
                  <th>Subtotal</th>
                  <th style="width: 50px;"></th>
               </tr>
            </thead>

            <tbody class="cartRows">
               <% for (let i=0; i<order.orderItems.length; i++) {%>
                  <tr>
                     <th scope="row"><%= i + 1%></th>
                     <th class="chartValue"> <%= order.orderItems[i].name %> </th>
                     <th class="chartValue"> $ <%= order.orderItems[i].price %> </th>
                     <th class="chartValue"> <%= order.orderItems[i].quantity %> </th>
                     <th class="chartValue"> $ <%= order.orderItems[i].price * order.orderItems[i].quantity %> </th>
                     <th style="width: 50px;"></th>
                  </tr>
               <% } %>
            </tbody>

         </table>
         <div class="card-footer">
            <h2 >Total: <span class="totalAmount">$ <%= order.total.toFixed(2)%> </span></h2>
         </div>

         <table class="styled-table">
            <thead>
               
               <tr>
                  <th><p class="detailTitle">Detalles de la compra</p></th>
                  <th></th>                 
               </tr>
            </thead>
            <tbody>

               <tr>
                  <td>
                     <span style="font-weight: bold;">Tipo de Envio:</span>  <%= order.shippingMethod %>
                  </td>
                  <td>
                     <span style="font-weight: bold;">Medio de Pago:</span> <%= order.paymentMethod %>
                  </td>
               </tr>
            </tbody>
         </table>

         <a href="/u/profile"><button class="backToProfileButton">Volver al perfil</button></a>
         
   </main>

   <footer>
      <%- include('./partials/footer') %>
   </footer>

</body>

</html>