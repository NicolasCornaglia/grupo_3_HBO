<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="\css\stylesLogin.css">  
</head>

<script>

</script>


<body>

    <header class="main-header">
        <%- include('./partials/header') %>
    </header>

    <main class="mainEditar">
        <form id="form" class="login" action="/api/products/<%- data.productToEdit.id %>?_method=PUT" method="POST">
            <h1 id="editar">Editar producto <%= data.productToEdit.id %> </h1>
            <labbel>Nombre del Producto:</labbel>
            <input class="borde" type="text" name="name" placeholder="Nombre del Producto" value="<%- data.productToEdit.name %>" required>
            <labbel>Descripción</labbel>
            <input class="borde" type="text" name="description" placeholder="Descripción" value="<%= data.productToEdit.description %>" required>
            <labbel>Imagen</labbel>
            <input id="imagen" class="borde" type="file" name="image" placeholder="Imagen" value="<%- data.productToEdit.image %>" required>
            <labbel>Categoría</labbel>
            <select class="borde" name="category" value="<%= data.productToEdit.category %>" required>
                <% for (let category of data.categorys) { %>
                    <option value="<%= category.id %>"><%= category.category_name %></option>
                <% } %>  
            </select>
            <labbel>Color</labbel>
            <select class="borde" name="colors" value="<%= data.productToEdit.color_id %>" required>
                <% for (let color of data.colors) { %>
                    <option value="<%= color.id %>"><%= color.color_name %></option>
                <% } %>  
            </select>    
            <labbel>Precio</labbel>
            <input class="borde" type="text" name="price" placeholder="Precio" value="<%= data.productToEdit.price %>" required>
            <labbel>Dimensiones en formato: Alto x Ancho x Profundidad</labbel>
            <input class="borde" type="text" name="dimensions" placeholder="Dimensiones" value="<%= data.productToEdit.dimensions %>" required>
            <labbel>Materiales</labbel>
            <select class="borde" name="materials" value="<%= data.productToEdit.material_id %>" required>
                <% for (let material of data.materials) { %>
                    <option value="<%= material.id %>"><%= material.material_name %></option>
                <% } %>  
            </select> 
            <button class="boton-entrar"  type="submit">Finalizar Edición</button>
        </form>
    </main>

  <footer>
     <%- include('./partials/footer') %>
  </footer>

</body>
</html>

